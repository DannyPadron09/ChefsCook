<h1>ChefsCook</h1>
<h2>Edit <%= @post.title %></h2>
<h3><a href="/posts"> All Posts</a> <a href="/posts/new">New Post</a> <a href="/recipes">All Recipes</a> <a href="/recipes/new">New Recipe</a> </a><a href="/logout">Log Out</a></h3><br><br>

<form action="/posts/<%= @post.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label>Title: </label><input type="text" name="title" value="<%= @post.title %>"><br>
    <label>Content: </label><textarea name="content"><%= @post.content %></textarea>
    <input type="submit" value="Edit Post">
</form>
